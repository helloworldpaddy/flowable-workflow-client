        </rollback>
    </changeSet>

    <!-- Create CASES table -->
    <changeSet id="core-007-create-cases-table" author="cms-migration">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cases" schemaName="cms_flowable_workflow"/>
            </not>
        </preConditions>
        <comment>Create cases table</comment>

        <createTable tableName="cases" schemaName="cms_flowable_workflow">
            <column name="case_id" type="BIGSERIAL">
