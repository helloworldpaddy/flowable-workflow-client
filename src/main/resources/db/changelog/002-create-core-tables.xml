<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ============================================ -->
    <!-- CORE TABLES CREATION WITH PRECONDITIONS     -->
    <!-- ============================================ -->

    <!-- Create ENUM types if they don't exist -->
    <changeSet id="core-001-create-enums" author="cms-migration">
        <comment>Create ENUM types for case management</comment>
        
        <sql>
            -- Create case_status_enum if not exists
            DO $$ BEGIN
                CREATE TYPE cms_flowable_workflow.case_status_enum AS ENUM (
                    'OPEN', 'IN_PROGRESS', 'RESOLVED', 'CLOSED', 'ON_HOLD', 
                    'CANCELLED', 'UNDER_REVIEW', 'ESCALATED', 'PENDING_INFO', 
                    'PENDING_APPROVAL', 'REJECTED', 'EXTERNAL_INVESTIGATION', 
                    'NEAR_COMPLETION', 'REQUIRES_ATTENTION'
                );
            EXCEPTION
                WHEN duplicate_object THEN null;
            END $$;

            -- Create priority_enum if not exists
            DO $$ BEGIN
                CREATE TYPE cms_flowable_workflow.priority_enum AS ENUM (
                    'LOW', 'MEDIUM', 'HIGH', 'CRITICAL'
                );
            EXCEPTION
                WHEN duplicate_object THEN null;
            END $$;

            -- Create severity_enum if not exists
            DO $$ BEGIN
                CREATE TYPE cms_flowable_workflow.severity_enum AS ENUM (
                    'LOW', 'MEDIUM', 'HIGH', 'CRITICAL'
                );
            EXCEPTION
                WHEN duplicate_object THEN null;
            END $$;

            -- Create user_status_enum if not exists
            DO $$ BEGIN
                CREATE TYPE cms_flowable_workflow.user_status_enum AS ENUM (
                    'ACTIVE', 'INACTIVE', 'SUSPENDED'
                );
            EXCEPTION
                WHEN duplicate_object THEN null;
            END $$;
        </sql>

        <rollback>
            DROP TYPE IF EXISTS cms_flowable_workflow.case_status_enum CASCADE;
            DROP TYPE IF EXISTS cms_flowable_workflow.priority_enum CASCADE;
            DROP TYPE IF EXISTS cms_flowable_workflow.severity_enum CASCADE;
            DROP TYPE IF EXISTS cms_flowable_workflow.user_status_enum CASCADE;
        </rollback>
    </changeSet>

    <!-- Create USERS table -->
    <changeSet id="core-002-create-users-table" author="cms-migration">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="users" schemaName="cms_flowable_workflow"/>
            </not>
        </preConditions>
        <comment>Create users table</comment>

        <createTable tableName="users" schemaName="cms_flowable_workflow">
            <column name="user_id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password_hash" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="user_status" type="cms_flowable_workflow.user_status_enum" defaultValue="ACTIVE">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="users" schemaName="cms_flowable_workflow"/>
        </rollback>
    </changeSet>

    <!-- Create ROLES table -->
    <changeSet id="core-003-create-roles-table" author="cms-migration">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="roles" schemaName="cms_flowable_workflow"/>
            </not>
